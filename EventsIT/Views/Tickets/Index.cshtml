@model IEnumerable<EventsIT.Models.Ticket>

@{
    ViewData["Title"] = "Index";
}

<h1>Your tickets</h1>

<table class="table">
    <thead>
        <tr>
            <th>Event</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @if (item.Event.ImageURL != null)
                    {
                        <img id="imageUrl" class="img-fluid" alt=" image" src="data:image/*;base64,@(Convert.ToBase64String(item.Event.ImageURL))">
                    }
                    else
                    {
                        <img id="imageUrl" class="img-fluid" alt=" image" src="">
                    }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
